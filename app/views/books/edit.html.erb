<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohidited this book from being sabed:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field:title %>
  </div>
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area:body %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

