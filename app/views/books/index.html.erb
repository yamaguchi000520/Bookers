<div id="notice">
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @books.last(8).each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New books</h2>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohidited this book from being sabed:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, url:'/books', method: :post do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field:title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area:body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>




